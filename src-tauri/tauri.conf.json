{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PassLocal",
  "version": "1.0.0",
  "identifier": "com.passlocal.vault",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PassLocal",
        "width": 900,
        "height": 650,
        "minWidth": 700,
        "minHeight": 500,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Local password manager for macOS",
    "longDescription": "A minimal, Apple-inspired password manager that stores your secrets locally with AES-256 encryption.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
